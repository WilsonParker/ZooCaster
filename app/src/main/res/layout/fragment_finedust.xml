<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.graction.developer.zoocaster.Fragment.FineDustFragment" />

        <variable
            name="modelItem"
            type="com.graction.developer.zoocaster.Model.Response.IntegratedAirQualityModel.IntegratedAirQualityModelItem" />

        <variable
            name="pm10"
            type="String" />
        <variable
            name="pm25"
            type="String" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:background="@drawable/dust"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.graction.developer.zoocaster.UI.Layout.HareCircleProgressView
                android:id="@+id/donut_progress"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="100dp"
                app:donut_animate_time="500"
                app:donut_background_color="#00efeded"
                app:donut_circle_starting_degree="-90"
                app:donut_finished_color="#ead77a7a"
                app:donut_finished_stroke_width="5dp"
                app:donut_max="100"
                app:donut_progress="80"
                app:donut_show_text="true"
                app:donut_unfinished_stroke_width="3dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="미세먼지" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@{modelItem.pm10Value}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@{modelItem.getGrade(modelItem.pm10Value, pm10)}"
                    textColor="@{modelItem.getColorForGrade(modelItem.getGrade(modelItem.pm10Value, pm10))}" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="초미세먼지" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@{modelItem.pm25Value}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@{modelItem.getGrade(modelItem.pm25Value, pm25)}"
                    textColor="@{modelItem.getColorForGrade(modelItem.getGrade(modelItem.pm25Value, pm25))}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="통합대기지수" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@{modelItem.khaiValue}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@{modelItem.getGrade(modelItem.khaiGrade)}"
                    textColor="@{modelItem.getColorForIntGrade(modelItem.khaiGrade)}" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="오존" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@{modelItem.o3Value}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@{modelItem.getGrade(modelItem.o3Grade)}"
                    textColor="@{modelItem.getColorForIntGrade(modelItem.o3Grade)}" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
