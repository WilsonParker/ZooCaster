<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--
        Style
    -->
    <style name="Style_TextView_wh" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Style_TextView_ei" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Style_TextView_es" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Style_TextView_wh_es" parent="Style_TextView_wh">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Style_MarginView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Style_AddActivityAlarm_SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:max">10</item>
        <item name="android:progress">5</item>
    </style>

    <!-- Activity -->
    <style name="AddActivityAlarm_BT_save" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/save_btn_b_5_b_5_b_5</item>
        <item name="android:text">저장</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AddActivityAlarm_BT_cancel" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/cancel_btn</item>
        <item name="android:text">취소</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#b5b5b5</item>
    </style>

    <style name="AddActivityAlarm_BT_modify" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/save_btn_b_5_b_5_b_5</item>
        <item name="android:text">수정</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
